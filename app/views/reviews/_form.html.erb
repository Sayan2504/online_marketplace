<div class="col-sm-12 col-md-8 col-lg-7 col-xl-6">
  <div class="card">
    <div class="card-body">
      <%= form_for @review, :html=> { :multipart=> true} do |f| %>
        <%= render "shared/error_messages", object: @review %>

        <div class="form-group">
          <%= f.label :name , "Name" %>
          <%= f.text_field :name, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Your name", maxlength: 255 %>
        </div>

        <div class="form-group">
          <%= f.label :email , "Email id" %>
          <%= f.text_field :email, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Your email id", maxlength: 255 %>
        </div>

        <div class="form-group">
          <%= f.label :location , "Location" %>
          <%= f.text_field :location, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Your address", maxlength: 255 %>
        </div>

        

        <%= f.hidden_field :post_id, value: @post.id %>
        



        <div class="form-group">
          <div>Rate and Review the post: </div>

          <div class="rating">  
            <label for="star5" title="Excellent!">5 Stars</label>
            <%=f.radio_button :rating, 5, :id => "star5" %>

            
            <label for="star4" title="Good!">4 Stars</label>
            <%=f.radio_button :rating, 4, :id => "star4" %> 

             
            <label for="star3" title="Average!">3 Stars</label>
            <%=f.radio_button :rating, 3, :id => "star3" %>

            
            <label for="star2" title="Poor!">2 Stars</label>
            <%=f.radio_button :rating, 2, :id => "star2" %> 

             
            <label for="star1" title="Very Poor!">1 Stars</label>
            <%=f.radio_button :rating, 1, :id => "star1" %>
          </div>
 
        </div>

        <div class="form-group">
          <%= f.text_area :review, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "Write your review", maxlength: 255 %>
        </div>
        


        <div class="form-row">
          <div class="col-xs-12 order-2 order-sm-1 col-sm-3">
            <% if !@review.new_record? %>
              <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
          </div>

          <div class="col-xs-12 text-right order-1 order-sm-2 col-sm-9">
            <%= link_to "Cancel", post_path(@post), class: "btn btn-light btn-xs-block" %>
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-xs-block", data: { disable_with: "Sending..." } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>