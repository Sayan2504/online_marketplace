<% provide(:title, "Categories") %>

<section class="table-header mb-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3 class="heading">Categories List</h3>
    </div>

    <div class="col-sm-12 col-md-6 text-md-right">
      <%= link_to "Add New", new_admin_category_path, class: "btn btn-primary", title: "Add new category" %>
    </div>
  </div>
</section>

<table class="table table-hover" width="100%">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td class="heading"><%= index+1 %></td>
        <td class="heading"><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>