<div class="col-sm-12 col-md-8 col-lg-7 col-xl-6">
  <div class="card">
    <div class="card-body">
      <%= form_for [:admin, @category], html: { multipart: true } do |f| %>
        <%= render "shared/error_messages", object: @category %>
        <div class="form-group">
          <%= f.label :name , "Category Name" %>
          <%= f.text_field :name, class: "form-control", autofocus: true, required: true, autocomplete: :off, placeholder: "e.g. Bikes, Books etc. (maximum 14 characters)", title: "Enter Category name", maxlength: 14 %>
        </div>
        <div class="form-row">
          <div class="col-xs-12 order-2 order-sm-1 col-sm-3">
            <% if !@category.new_record? && !@category.posts.present? %>
              <%= link_to "Delete", admin_category_path(@category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", title: "No posts!! Delete?" %>
            <% end %>
          </div>
          <div class="col-xs-12 text-right order-1 order-sm-2 col-sm-9">
            <%= link_to "Cancel", admin_categories_path, class: "btn btn-light btn-xs-block", title: "Cancel" %>
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." }, title: "Add category" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>