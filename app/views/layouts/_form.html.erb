
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card card-header rounded-pill shadow p-3 mb-3 bg-white rounded">
          <div class="container">
            <div class="row">
              <div class="col-sm-4">
                <% if post.post_attachments.present? %>
                  <%= image_tag (post.post_attachments.first.photo_url.to_s), :size => "70x70" %>
                <% end %>
              </div>
              <div class="col-sm-8 align-item-center text-align-center pr-0 pl-0">
                <% if admin_user? %>
                  <span><h4><%= link_to post.ad_title.upcase,  post_path(post) %></h4></span>
                <% else %>
                  <span><h4 class="mt-3"><%= link_to post.ad_title.upcase,  post_path(post) %></h4></span>
                <% end %>

                <% if admin_user? %>

                  <% if approved %>
                    <div class="row ml-3" style="display: inline-block" >
                      <%= link_to 'Reject',  {:controller => "ads",
                                            :action => "reject",
                                            :id => post.id,
                                            :decision => "false"}, method: 'post', class: "btn btn-sm btn-success" %>
                    </div>

                  <% elsif rejected %>
                    <div class="row ml-3" style="display: inline-block" >
                      
                      <%= link_to 'Approve',  {:controller => "ads",
                                              :action => "approve",
                                              :id => post.id,
                                              :decision => "true"}, method: 'post', class: "btn btn-sm btn-success" %>
                    </div>

                  <% else %>
                    <div class="row ml-3" style="display: inline-block" >
                        
                      <%= link_to 'Approve',  {:controller => "ads",
                                              :action => "approve",
                                              :id => post.id,
                                              :decision => "true"}, method: 'post', class: "btn btn-sm btn-success" %>
                      
                      <%= link_to 'Reject',  {:controller => "ads",
                                          :action => "reject",
                                          :id => post.id,
                                          :decision => "false"}, method: 'post', class: "btn btn-sm btn-success" %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>