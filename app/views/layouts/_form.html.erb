<div class="container">
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card card-header rounded-pill shadow p-3 mb-3 bg-white rounded">
          <div class="container">
            <div class="row">

              <div class="col-sm-4">
                <% if post.post_attachments.present? %>
                  <%= image_tag (post.post_attachments.first.photo_url.to_s), size: "70x70" %>
                <% else %>
                  <%= image_tag ("default.png"), size: "70x70" %>
                <% end %>
              </div>
              
              <div class="col-sm-8 align-item-center text-align-center pr-0 pl-0 pb-0">
              
                <% if admin_user? %>
                  <span class="post-ad-title"><h5><%= link_to post.ad_title.upcase,  post_path(post) %></h5></span>
                <% else %>
                  <span class="post-ad-title"><h5 class="mt-3"><%= link_to post.ad_title.upcase,  post_path(post) %></h5></span>
                <% end %>
                
                
                <% if admin_user? %>

                  <% if post.approved_by == "null" %>
                    <div class="row ml-3" style="display: inline-block" >
                      <%= link_to "Approve", admin_approve_path({ id: post.id, decision: "true" }), class: "btn btn-md btn-primary", data: { disable_with: "Approving..."  } %>
                      <%= link_to "Reject", admin_reject_path({ id: post.id, decision: "false" }), class: "btn btn-md btn-secondary", data: { disable_with: "Rejecting..."  } %>
                    </div>

                  <% elsif post.approved_by == "rejected" %>
                    <div class="row ml-5" style="display: inline-block" >
                      <%= link_to "Approve", admin_approve_path({ id: post.id, decision: "true" }), class: "btn btn-md btn-primary", data: { disable_with: "Approving..."  } %>
                    </div>

                  <% else %>
                    <div class="row ml-5" style="display: inline-block">
                      <%= link_to "Reject", admin_reject_path({ id: post.id, decision: "false" }), class: "btn btn-md btn-secondary", data: { disable_with: "Rejecting..."  } %>
                    </div>
                  <% end %>
                <% end %>
                
              </div>
            </div>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>
