<% if !params[:ad_title] %>
  <% if !params[:location] && @posts.present? %>
    <h2 class="text-center mt-2 mb-4 heading"> Advertisements</h2>  
    <%= render "layouts/form" %>
  <% elsif params[:location] && @post_city.present? %>
    <%= render "render_posts_user_with_location" %>
    <%= render "layouts/form" %> 
  <% else %>
    <h2 class="text-center text-muted mt-5"> No Advertisements</h2>
  <% end %>
<% elsif params[:ad_title] %>
  <% if !params[:location] && @post_ad_title.present? %>
    <%= render "render_posts_user_with_ad_title" %> 
    <%= render "layouts/form" %>
  <% elsif params[:location] && @post_city.present? && @post_ad_title.present? %>
    <%= render "render_posts_user_with_ad_title_location" %>
    <%= render "layouts/form" %>
  <% else %>
    <h2 class="text-center text-muted mt-5"> No Advertisements</h2>
  <% end %>
<% end %>