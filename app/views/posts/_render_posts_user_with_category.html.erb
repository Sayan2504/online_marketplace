<% if params[:user_id] %>
  <% if params[:decision] == "true" %>
    <% yourpost = false %>
    <% @myposts.each do |mypost| %>
      <% @post_category.each do |post_category| %>
        <% if mypost.id == post_category.id %>
          <% yourpost = true %>
          <% break %>
        <% end %>
      <% end %>
    <% end %>
    <% if yourpost == true %>
      <h2 class="text-center mt-2 mb-4 heading"> Advertisements</h2>
    <% else %>
      <h2 class="text-center text-muted mt-5"> No Advertisements</h2>
    <% end %>
  <% else %>
    <% otherpost = false %>
    <% @othersposts.each do |otherspost| %>
      <% @post_category.each do |post_category| %>
        <% if otherspost.id == post_category.id %>
          <% otherpost = true %>
          <% break %>
        <% end %>
      <% end %>
    <% end %>
    <% if otherpost == true %>
      <h2 class="text-center mt-2 mb-4 heading"> Advertisements</h2>
    <% else %>
      <h2 class="text-center text-muted mt-5"> No Advertisements</h2>
    <% end %>
  <% end %>
<% else %>
  <h2 class="text-center mt-2 mb-4 heading"> Advertisements</h2>     
<% end %>