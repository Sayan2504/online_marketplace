<% provide(:title, @post.ad_title) %>

<div class="row justify-content-center align-items-center">
  <span><h1><u><%= @post.ad_title.upcase %></u></h1></span>
</div>

<div class="row ">    
  <% @post_attachments.each do |p| %>
    <div class="col-xs-10 col-sm-4 md-3">
      <%= image_tag (p.photo_url.to_s), :size => "300x300" %>
    </div>
  <% end %>
</div>
            
<div class="row justify-content-flex-center">
  <div class="col-xs-12 col-sm-12 md-12">
    <div class="post-details-row">
      <label><strong>Description : </strong></label>
      <span><%= @post.ad_description %></span>
    </div>

    <div class="post-details-row">
      <label><strong>Advertiser : </strong></label>
      <span><%= @post.user_name %></span>
    </div>

    <div class="post-details-row">
      <label><strong>Contact : </strong></label>
      <span><%= @post.phone %></span>
    </div>

    <div class="post-details-row">
      <label><strong>Location : </strong></label>
      <span><%= @post.city %></span>
    </div>
  </div>
</div>
        



