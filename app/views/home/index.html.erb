
<div class="container">
<div class="row justify-content-center">
  <% @posts.each do |post| %>
    <div class="col-sm-4">
      <div class="card card-header rounded-pill shadow p-3 mb-3 bg-white rounded">
        <div class="container">
          <div class="row">
            <div class="col-sm-4">
              <% if post.post_attachments.present? %>
                <%= image_tag (post.post_attachments.first.photo_url.to_s), :size => "70x70" %>
              <% end %>
            </div>
            <div class="col-sm-8 align-item-center text-align-center pr-0 pl-0">
                <span><h5 class="mt-3"><%= link_to post.ad_title.upcase,  login_path %></h5></span>
            </div>
          </div>
        </div> 
      </div>
    </div>
  <% end %>
</div>
</div>