<% provide(:title, "Products sold by #{current_user.name}") %>

<div class="row justify-content-center">

  <% if @posts.present? %>
    <section class="table-header mb-3">
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <h3 class="text-center heading">Products sold by <%= current_user.name %></h3>
        </div>
      </div>
    </section>

    <%= render "layouts/form" %>
  <% else %>
    <h2 class="text-center text-muted mt-5"> No products sold yet</h2>
  <% end %>
</div>