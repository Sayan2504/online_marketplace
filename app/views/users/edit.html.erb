<% provide(:title, "Edit") %>

<div class="row justify-content-center">
  <div class="col-sm-12">
    <h3 class="text-center">Edit</h3>
  </div>

  <div class="col-sm-12 col-md-8 col-lg-7 col-xl-6">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @user, local: true) do |f| %>
          <%= render "shared/error_messages", object: @user %>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, autocomplete: :off, placeholder: "Email Address", maxlength: 255 %>
          </div>

          <div class="form-group">
            <%= f.label :password, "New Password" %>
            <%= f.password_field :password, class: "form-control", autocomplete: :off, placeholder: "Enter password only if you want to change it", minlength: 6 %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: :off, placeholder: "Confirm the new password", minlength: 6 %>
          </div>

          <br>

          <div class="form-group">
            <%= link_to "Cancel", user_path(@user), class: "btn btn-light btn-xs-block" %>
            <%= f.submit "Update", class: "btn btn-primary", data: { disable_with: "Updating..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>