<% provide(:title, "User posts") %>

<section class="table-header mb-3">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <h3 class="text-center">Posts approved by admin</h3>
    </div>
  </div>
</section>


<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card card-header">
          <div class="container">
            <div class="row">
              <div class="col-sm-4">
                <%= image_tag (@post_attachments.first.photo_url.to_s), :size => "70x70" %>
              </div>
              <div class="col-sm-8">
                <span><h4><%=link_to post.ad_title.upcase,  post_path(post) %></h4></span>

                <div class="row" style="display: inline-block" >
                 <button type="button" class="btn btn-primary btn-sm">Approve</button>
                 <button type="button" class="btn btn-secondary btn-sm">Reject</button>
                </div>
              </div>
            </div>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>