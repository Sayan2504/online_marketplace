<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4">Welcome <%= current_user.name %></h1>
    <p class="lead">Enjoy our platform to buy or sell item of various categories</p>
  </div>
</div>


<% provide(:title, "User Homepage") %>

    <section class="table-header mb-3">
    <div class="row">
        <div class="col-sm-12 col-md-12">
          <h2 class="text-center">Your Approved Posts</h2>
        </div>
    </div>
    </section>
    
    <% if @user.posts.present? %>
      <%= render "layouts/form" %>
    <% else %>
      <h2> You have no approved posts now </h2>
    <% end %>