<% provide(:title, "Messages") %>

<section class="table-header mb-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3 class="heading">Unread Messages for you</h3>
    </div>
  </div>
</section>

<table class="table table-hover" width="100%">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  
    <% @notifications.each_with_index do |notification,index| %>
      <tr>
        <td class="heading"><%= index+1 %></td>
        <td class="heading"><%= notification.body %></td>
        <% if notification.unread == "true" %>
          <td>
            <%= link_to 'Open Chat',  
            {:controller => "notifications",
            :action => "read_message",
            :id => notification.id,
            :sender_id => notification.sender_id,
            :receiver_id => notification.receiver_id,
            :post_id => notification.post_id,
            :decision => "true"}, method: 'post', 
            class: "btn btn-md btn-primary",
            data: { disable_with: "Opening Chat..."  } %>
          </td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>